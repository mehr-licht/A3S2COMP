//TOKENS
SKIP ://no comments considered
{
 " " | "\r" | "\t"
}


// RESERVED
TOKEN:
{
<CLASS: "class">
| <EXTENDS: "extends">
| <LCHAVETA: "{">
| <RCHAVETA: "}">
| <SCOLON: ";">
| <PUBLIC: "public">
| <LPAR: "(">
| <VIRG: ",">
| <RPAR: ")">
| <RETURN: "return">
| <LSQUARE: "[">
| <RSQUARE: "]">
| <INT: "int">
| <BOOLEAN: "boolean">
| <INT_ARRAY: "int[]">
| <BOOL_ARRAY: "boolean[]">
| <IF: "if">
| <ELSE: "else">
| <WHILE: "while">
| <EQUAL: "=">
| <POINT: ".">
| <LENGTH: "length">
| <OPERATOR: "&&" | "<" | "+" | "-" | "*" | "/">
| <TRUE: "true">
| <FALSE: "false">
| <THIS: "this">
| <NEW: "new">
| <NOT: "!">
| <STATIC: "static">
| <VOID: "void">
| <MAIN: "main">
| <QUOTE:"\"">
}

TOKEN:
{
 < INTEGERLITERAL: (["0"-"9"])+ >
| < LF: "\n" >
| <IDENTIFIER: ["_","a"-"z","A"-"Z"](["_","a"-"z","A"-"Z","0"-"9"])*>
| <STRING: "\"" (["a"-"z","A"-"Z","0"-"9",":"," ","="])+ "\"">
 /* | <STRING: <QUOTE> (["_","a"-"z","A"-"Z","0"-"9"," ", "\n", "\t"])* <QUOTE> >*/
}


//PRODUCTIONS
SimpleNode Start(): {}
{
Program() {return jjtThis;}
}


void Program(): {Token t;}
{
    Statement()  //changed this for debugging reasons should be ClassDeclaration()
    <LF>                // also we need to uncomment ClassDeclaration()
}


void ClassDeclaration(): {Token t;}
{
  <CLASS> <IDENTIFIER> (<EXTENDS> <IDENTIFIER>)? <LCHAVETA> (VarDeclaration())* (MainDeclaration() | MethodDeclaration())* <RCHAVETA>
}

void MainDeclaration(): {Token t;}
{
<PUBLIC> <STATIC> <VOID> <MAIN> <LPAR> <STRING> <LSQUARE> <RSQUARE> <IDENTIFIER> <RPAR> <LCHAVETA> (VarDeclaration())* (Statement())* <RCHAVETA>
}

/*testes.md for more info*/
void Type():{}
{
    (<INT> | <BOOLEAN> | <INT_ARRAY> | <BOOL_ARRAY> )
}


/*testes.md for more info*/
void VarDeclaration(): {Token t;}
{
  Type() <IDENTIFIER> ";"
}



void Statement():{Token:t;}
{
    <LCHAVETA> ( Statement() )* <RCHAVETA>
    | <IF> <LPAR> Expression() <RPAR> Statement() <ELSE> Statement()
    | <WHILE> <LPAR> Expression() <RPAR> Statement()
    | Expression() <SCOLON>
    | <IDENTIFIER> <EQUAL> Expression() <SCOLON>
    | <IDENTIFIER> <LSQUARE> Expression() <RSQUARE> <EQUAL> Expression() <SCOLON>
}

// primeia parte da declaracao do metodo
void MethodDeclaration():{}
{
    //excludes class constructor
    // public int getFoo(){return foo;)}
    <PUBLIC> Type() <IDENTIFIER> <LPAR> MethodDeclarationArgs() <RPAR> MethodDeclarationdInside() //WHY "(" instead of <LPAR>, etc ?
}

//Trata dos argumentos da funcao
void MethodDeclarationArgs():{}
{
    (
         Type() <IDENTIFIER>
     |
         (Type() <IDENTIFIER>  (<VIRG> Type() <IDENTIFIER>)+)
    )
}

//Trata apenas dos returnos que os metodos podem ter
void ReturnExpression():{}
{
    (<IDENTIFIER> | <INTEGERLITERAL> | <TRUE> | <FALSE> )   // WHY "true" instead of <TRUE>?
}

// Corpo do metodo da classe, a parte entre {}
void MethodDeclarationdInside():{}
{
    <LCHAVETA> (VarDeclaration() )* (Statement())* <RETURN> [ReturnExpression()] <SCOLON> <RCHAVETA>
}

void Expression(): {Token t;}
{
Exp1() | Exp2()
}

void Exp1(): {Token t;}
{
Expression() <OPERATOR> Expression()
| Expression() <LSQUARE> Expression() <RSQUARE>
| Expression() <POINT> <LENGTH>
| Expression() <POINT> <IDENTIFIER> <LPAR> (Expression() (<VIRG> Expression())*)? <RPAR>
}


void Exp2(): {Token t;}
{
<INTEGERLITERAL>
| <TRUE>
| <FALSE>
| <IDENTIFIER>
| <THIS>
| <NEW> <INT> <LSQUARE> Expression() <RSQUARE>
| <NEW> <IDENTIFIER> <LPAR> <RPAR>
| <NOT> Expression()
| <LPAR> Expression() <RPAR>
}


